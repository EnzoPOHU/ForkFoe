<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<HBox xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="CENTER"
      fx:controller="com.forkfoe.forkfoe.controller.table.TableCardController"
      style="-fx-padding: 10; -fx-border-color: #ccc; -fx-border-radius: 5; -fx-border-width: 1; -fx-background-color: #f9f9f9; -fx-background-radius: 5;"
      onMouseClicked="#onTableCardClicked">
    <VBox spacing="5">
        <Label fx:id="tableNumberLabel" style="-fx-font-size: 16px;" />
        <Label fx:id="seatsLabel" style="-fx-font-size: 14px; -fx-text-fill: gray;" />
        <Label fx:id="reservationNameLabel" style="-fx-font-size: 12px; -fx-font-style: italic;" />
    </VBox>
</HBox>