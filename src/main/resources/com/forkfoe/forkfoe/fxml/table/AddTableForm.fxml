<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox spacing="10" alignment="CENTER"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.forkfoe.forkfoe.controller.table.AddTableController">
    <Label text="Créer une nouvelle table" style="-fx-font-size: 18px; -fx-padding: 10;" />

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Numéro de la table : "
               style="-fx-font-size: 14px;" />
        <TextField fx:id="tableNumberInput"
                   promptText="Ex : 1"
                   style="-fx-pref-width: 200px;" />
    </HBox>


    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Nombre max de places : " style="-fx-font-size: 14px;"/>
        <Spinner fx:id="maxSeatsInput" style="-fx-pref-width: 100px;" editable="true" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Enregistrer"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                onAction="#onSaveTableClicked" />
        <Button text="Annuler"
                style="-fx-background-color: #F44336; -fx-text-fill: white;"
                onAction="#onCancelClicked" />
    </HBox>
</VBox>