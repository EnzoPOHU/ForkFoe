<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.forkfoe.forkfoe.controller.DishController">

    <center>
        <VBox spacing="15" fx:id="dishContainer">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <ComboBox fx:id="newStatusComboBox">

            </ComboBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <HBox alignment="CENTER_LEFT">
                <Button text="Ajouter un plat" styleClass="ajouter-button" onAction="#openAddDishPopup"/>
            </HBox>
            <Pane HBox.hgrow="ALWAYS"/>
            <HBox alignment="CENTER_RIGHT">
                <Button text="Commander" styleClass="commander-button" onAction="#validCommand"/>
            </HBox>
        </HBox>
    </bottom>


</BorderPane>
