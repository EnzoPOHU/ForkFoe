<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.forkfoe.forkfoe.ControllerDish">

    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" prefHeight="60" styleClass="navbar">
            <Button text="Table" styleClass="nav-button"/>
            <Button text="Plat" styleClass="nav-button"/>
            <Button text="Commande" styleClass="nav-button"/>
            <Button text="Employé" styleClass="nav-button"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="15">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="🍕 Pizza Margherita" styleClass="plat-label"/>
                <CheckBox fx:id="checkboxPizza"/>
                <Spinner fx:id="spinnerPizza" prefWidth="60"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <Label text="🍔 Burger Maison" styleClass="plat-label"/>
                <CheckBox fx:id="checkboxBurger"/>
                <Spinner fx:id="spinnerBurger" prefWidth="60"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <Button text="Commander" styleClass="commander-button" onAction="#validerCommande"/>
        </HBox>
    </bottom>

</BorderPane>
